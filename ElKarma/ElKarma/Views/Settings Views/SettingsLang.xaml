<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElKarma.Views.Settings_Views.SettingsLang">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="header"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <StackLayout Orientation="Horizontal" Margin="5">
                    <Label Text="English" TextColor="Black" Font="Calibri" FontSize="Medium" />
                <Label x:Name="english" Text="√" HorizontalOptions="EndAndExpand" Font="Calibri" FontSize="18"/>
                    <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="EnglishRecognizer_Tapped"/>
                    </StackLayout.GestureRecognizers>
             </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="5">
                <Label Text="العربيه" TextColor="Black" Font="Calibri" FontSize="Medium" />
                <Label  x:Name="arabic" Text="√" HorizontalOptions="EndAndExpand" Font="Calibri" FontSize="18"/>
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ArabicRecognizer_Tapped"/>
                </StackLayout.GestureRecognizers>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>