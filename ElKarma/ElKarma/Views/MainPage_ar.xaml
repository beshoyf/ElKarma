<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:ElKarma.Views"
            x:Class="ElKarma.Views.MainPage_ar" FlowDirection="RightToLeft"  >

    <MasterDetailPage.Master>
        <views:MenuPage_ar  />
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail >
        <NavigationPage BarBackgroundColor="#910319">
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="iOS" Value="tab_feed.png"/>
                </OnPlatform>
            </NavigationPage.Icon>
            <x:Arguments>
                <views:HomePage />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>