<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElKarma.Views.Error">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Opps no network connection !"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Try Again" HorizontalOptions="CenterAndExpand" Margin="5" BackgroundColor="#910319" VerticalOptions="CenterAndExpand" BorderRadius="10" WidthRequest="120" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>